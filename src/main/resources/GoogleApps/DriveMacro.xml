    <property>
      <code>{{groovy}}
def id = xcontext.macro.params.id;
def width = xcontext.macro.params.width;
def height = xcontext.macro.params.height;
def nb = Integer.parseInt(xcontext.macro.params.nb);
def obj = doc.getObject("GoogleApps.SynchronizedDocumentClass", nb)
def escapetool = new org.xwiki.velocity.tools.EscapeTool();
def force = false;
def gagroovy = xwiki.parseGroovyFromPage("GoogleApps.Groovy")
gagroovy.init(xwiki, xcontext, doc)

if (xcontext.macro.params.authentication) {
  if (gagroovy.authorize(false)==null) {
    def url = gagroovy.getAuthorizationURL()
    println "This macro might require [[authentication on Google Apps&gt;&gt;url:${url}]]"
  }
}  
  
if (nb==null)
  nb = 0;
def embednb = (!request.nb) ? 0 : Integer.parseInt(request.nb)

if (request.update=="1" &amp;&amp; nb==embednb)
  force = true;
  
if (request.embed=="1") {
  if (embednb==nb) {
   if (obj==null) {
     obj = doc.newObject("GoogleApps.SynchronizedDocumentClass");
     obj.getBaseObject().setNumber(nb);
   }
   doc.use(obj);
   doc.set("id", request.id)
   doc.set("embedLink", request.embedLink)
   doc.set("fileName", request.docName)
   doc.save("Inserting Google Document")
  }
}  
  
  if (id!=null) {
    println id;
  } else if (obj!=null &amp;&amp; !force) {
   doc.use(obj);
   def embedLink = doc.getValue("embedLink")
   println """[[Change this document&gt;&gt;||queryString="update=1&amp;nb=${nb}"]]"""
   println """{{html clean=false}}&lt;iframe src="${embedLink}" width="${width}" height="${height}"&gt;&lt;/iframe&gt;{{/html}}"""   
  } else {
    def tquery = ""
    if (request.query)
     tquery = escapetool.xml(request.query)
println """    
{{html clean==false}}
&lt;form action="" method="get"&gt;
Insert a Google Document: 
&lt;input type="hidden" name="update" value="1" /&gt;
&lt;input type="hidden" name="nb" value="${nb}" /&gt;
&lt;input type="text" name="query" value="${tquery}" /&gt;
&lt;input type="submit" value="Search" /&gt;
&lt;/form&gt;
{{/html}}
"""    
if (request.query) {
 def squery = "'" + request.query + "'"
 def results = gagroovy.listDocuments("fullText contains ${squery}", 10)
 def nbres = results.items.size();
  
 println "${nbres} documents found: " 
 for (entry in results.items) {
  def docName = entry.title
  def embedLink = entry.embedLink;
  if (embedLink==null)
    embedLink = entry.alternateLink;
  if (embedLink==null)
   println """* ${docName}: this document cannot be embedded"""   
  else  
   println """* ${docName}: [[embed this document&gt;&gt;||queryString="embed=1&amp;nb=${nb}&amp;id=${entry.id}&amp;embedLink=${escapetool.url(embedLink)}&amp;docName=${escapetool.url(docName)}"]]"""
 }
}
  }
{{/groovy}}</code>
